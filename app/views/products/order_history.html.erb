<table class = "table">
  <tr>
    <th>Prodcut Title</th>
    <th>Product Price</th>
    <th>Order Data</th>
    <th>Status</th>
    <th>Placed By</th>
  </tr>
  <% @order_history.each do | order | %>
    <tr>
      <td><%= order.product.title %></td>
      <td><%= order.product.price %></td>
      <td><%= Date.today %></td>
      <td><%= "Pending" %></td>
      <td><%= link_to order.user.email, user_profile_path(id: order.user)%></td>
    </tr>
  <%end%>
</table>
